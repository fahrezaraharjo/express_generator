<!DOCTYPE html>

<head>

    <title>Learn HTML</title>
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

</head>

<div class="w3-cell-row">

    <div class="w3-container w3-red w3-cell">
        <h1> Welcome, <%= user.fullname %></h1>
    </div>
  
    <div class="w3-container w3-green w3-cell">
        <a href="/logout">logout</a>
    </div>
  
  </div>
    <h1>To Do</h1>
    <div class="card">
        <form action="" method="get">
            <div class="card-header">
                <h2>Pencarian</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <label for="task" class="col-sm-2">Kata kunci</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="task" name="task" value="<%= query.task %>" />
                    </div>
                </div>
            </div>

        </form>
    </div>
    <table class="table table-striped">
        <thead<div class="card-footer">
            <button type="submit" class="btn btn-success">Cari</button>
            <a href="/" class="btn btn-warning">Reset</a>
            </div>
            <tr>
                <th>No.</th>
                <th>Daftar Game</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index)=> { %>
                    <tr>
                        <td>
                            <%= index+1 %>
                        </td>
                        <td>
                            <%= item.task %>
                        </td>
                        <td>
                            <%= item.complete ? 'Yes' : 'No' %>
                        </td>
                        <td>
                            <a href="/edit/<%= item.id %>" class="btn btn-success">Edit</a>
                            <a href="/delete/<%= item.id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <% for(let i=1; i<=pages; i++){ %>
                <li class="page-item <%= i  == page ? 'active' : '' %>"><a class="page-link" href="/?page=<%= i %>">
                        <%= i %>
                    </a></li>
                <% } %>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
        </ul>
    </nav>
    <a href="/add" class="btn-primary">Tambah</a>
</body>

</html>